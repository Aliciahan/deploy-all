[base]
name=CentOS-$releasever - Base
baseurl=http://{{ yum_repo_host }}/centos/$releasever/os/$basearch/
enabled=1
gpgcheck=0

#released updates
[updates]
name=CentOS-$releasever - Updates
baseurl=http://{{ yum_repo_host }}/centos/$releasever/updates/$basearch/
enabled=1
gpgcheck=0

#additional packages that may be useful
[extras]
name=CentOS-$releasever - Extras
baseurl=http://{{ yum_repo_host }}/centos/$releasever/extras/$basearch/
enabled=1
gpgcheck=0
